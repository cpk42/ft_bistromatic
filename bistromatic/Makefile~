FLAGS = -Wall -Wextra -Werror

RM	= rm -f

LIBFT = ./libft/

NAME = calc

HEADER = ft_list.h

SRCS = eval_expr.c do_op.c calc.c

OBJS = eval_expr.o do_op.o calc.o

$(NAME):
	@$(LIBFT) make
	@gcc $(FLAGS) -c $(SRCS) -L$(LIBFT) -lft
	@gcc $(FLAGS) $(OBJS) -o $(NAME)

all: $(NAME)

clean:
	@make clean $(LIBFT)
	@$(RM) $(OBJS)

fclean: clean
	@make fclean $(LIBFT)
	@$(RM) $(NAME)

re: fclean all